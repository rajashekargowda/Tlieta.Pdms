<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/PdmsStyle.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2013.3.1119/kendo.common.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/kendo/2013.3.1119/kendo.bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/kendo/2013.3.1119/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2013.3.1119/kendo.all.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2013.3.1119/kendo.aspnetmvc.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
    <script src="@Url.Content("~/Scripts/Commmon.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")"></script>
</head>
<body>
    <div id="bodyBg">
        <!--Header Starts-->
        <div class="header">
            <div class="mainBody">
                <div class="logo"></div>
                <div class="userInfo">
                    <ul class="userAccount">
                        <li><a href="#">Welcome <strong>Sachin</strong> </a>
                            <ul class="userLinks">
                                <li>@Html.ActionLink("Change password", "ChangePassword", "Home")</li>
                                <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                            </ul>
                        </li>
                    </ul>
                    <a href="@Url.Action("Entry", "Home")" class="homeBtn"></a>
                </div>
            </div>
        </div>
        <!-- Header ends -->

        <div class="mainBody">
            <div class="pageCenter">
                <!--Main Navigation Starts here-->
                <div class="nav">
                   <ul id="nav">
                        <li class="first">
                            <a>Administration</a>
                            <ul class="firstLevel">
                                 <li><a href="#">Link 1</a></li>
                                 <li><a href="#">Link 2</a></li>
                            </ul>
                        </li>
                        <li class="first">
                            <a>Patient Forms</a>
                            <ul class="firstLevel">
                               <li><a>Level 1</a>
                                   <ul class="secondLevel">
                                    <li><a href="#">Level 2</a></li>
                                </ul>
                               </li>
                            </ul>
                        </li>
                        <li class="first">
                            <a>Reports View</a>
                            <ul class="firstLevel">
                                 <li><a href="#">Link 1</a></li>
                            </ul>
                        </li>
                        <li class="first">
                            <a>Other Service Request</a>
                            <ul class="firstLevel">
                                 <li><a href="#">Link 1</a></li>
                            </ul>
                        </li>
                    </ul>
                   </div>
                <!--Main Navigation ends here-->

                <!--Content-->
                <div class="mainCon">
                    <div class="contentCon  nopadd wd100">
                        @RenderBody()
                    </div>
                </div>

            </div>
        </div>
    </div>
     
    <!-- Footer starts -->
    <div class="footer">
    <div class="mainBody">
    	<div class="lhs"> <a href="#"> Press Releases </a> <span>|</span> <a href="#"> Privacy Policy</a>   <span>|</span>    <a href="#"> Terms Of Use</a>  <span>|</span>   Contact Us </div>
        <div class="rhs">Tlieta Solutions Private Ltd © @DateTime.Now.Year</div>
        </div>
    </div>
   <!-- Footer ends-->

    <script type="text/javascript">
        $(function () {
            var alertwindow = $("#PDMSAlert").kendoWindow({
                title: "Alert",
                visible: false,
                iframe: true,
                modal: true,
                width: "300px"
            }).data("kendoWindow");

            $("#menu").kendoMenu();
        });
        function PDMSAlert(m) {
            var alertwindow = $("#PDMSAlert").data('kendoWindow');
            $("#pdmsalertmessage").html("<p>" + m + "</p>");
            alertwindow.center();
            alertwindow.open();
            alertwindow.toFront();
        }

    </script>
    <div id="PDMSAlert" >
        <div id="pdmsalertmessage" class="padd10" ></div>
       <div class="formAction" ><button id="btnOk" onclick="$('#PDMSAlert').data('kendoWindow').close();" class="greeenGrBtn clear" type="button" role="button" aria-disabled="false">OK</button></div>
    </div>  
</body>
</html>
